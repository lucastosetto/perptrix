# Default Perptrix server configuration
# Copy this file to .env and adjust values as needed for your local setup
# The .env file is gitignored and will not be committed

PORT=8080
EVAL_INTERVAL_SECONDS=60
SYMBOLS=BTC
PERPTRIX_ENV=production

# Data stores
QUESTDB_URL=postgresql://admin:quest@localhost:8812/qdb
REDIS_URL=redis://localhost:6379
HISTORICAL_CANDLE_COUNT=200

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=perptrix-signal-engine

# Logging
RUST_LOG=info
